<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <div class="card custom-card p-4">
        <h3 class="card-heading text-center mb-4">Create Post</h3>
        <%= form_for @post do |f| %>
          <div class="form-group mb-3">
            <%= f.label :title, class: "fw-bold" %>
            <%= f.text_field :title, class: "form-control" %>
            <% @post.errors.full_messages_for(:title).each do |message| %>
              <div class="text-danger">
                <%= message %>
              </div>
            <% end %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :content, class: "fw-bold" %>
            <%= f.text_area :content, class: "form-control", rows: 4 %>
            <% @post.errors.full_messages_for(:content).each do |message| %>
              <div class="text-danger">
                <%= message %>
              </div>
            <% end %>
          </div>
          <% if user_signed_in? %>
             <%= f.submit "Create Post", class: "btn btn-success mt-3" %>
          <% else %>
             <%= link_to "Create Post", new_user_session_path, class: "btn btn-success mt-3" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
