<div class="container mt-4">
  <div class="row">
    <div class="col-lg-12 mb-4">
      <div class="card post-card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-4">
              <img src="https://media.istockphoto.com/id/922745190/photo/blogging-blog-concepts-ideas-with-worktable.jpg?s=2048x2048&w=is&k=20&c=QNKuhWRD7f0P5hybe28_AHo_Wh6W93McWY157Vmmh4Q=" class="img-fluid" alt="Post Image" style="max-height: 200px;">
              <p class="mt-2 fw-bold"><%= image_tag "comment.png", style:"width:30px;"%> <%= @post.comments.count %></p>
            </div>
            <div class="col-lg-8">
              <div class="card-heading">
                <h2><%= @post.title %></h2>
              </div>
              <div class="card-text">
                <p><%= @post.content %></p>
              </div>
              <div>
                <%= render partial: 'comments/form', post: @post %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'comments/comments_list' %>
</div>
